@model List<ZavrsniRadWebShop.Models.OrderItem>


<div class="container">
<h1>Shopping Cart</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Checkout", "ShoppingCart")" class="btn btn-primary">Proceed to Checkout</a>
}
else
{
    <p>Your shopping cart is empty.</p>
}
</div>