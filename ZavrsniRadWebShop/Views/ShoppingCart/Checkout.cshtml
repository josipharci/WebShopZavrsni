
<div class="container mt-5">

<h1>Checkout</h1>

<div class="row mt-2">
    <div class="col-5">
            <form method="post" action="/Order/CreateOrder">
            <div class="form-groupp">
                <label for="customerName">Customer Name:</label>
                <input type="text" id="customerName" name="customerName" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="customerEmail">Email:</label>
                <input type="email" id="customerEmail" name="customerEmail" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="customerAddress">Address:</label>
                <input type="text" id="customerAddress" name="customerAddress" class="form-control"  required>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Submit Order</button>
        </form>
    </div> 
    <div class="col-5">
         <h2>Information</h2>
         <p>Total items: @Model.CartItems.Count</p>
            <p>Total price: @Model.TotalPrice <span>€</span></p>
         <p>Order date: @Model.OrderDate</p>
         <h2>Order Details</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Quantity x</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice  <span>€</span></td>
                        <td>@(item.Quantity * item.UnitPrice) <span>€</span></td>
                    </tr>
                }
            </tbody>
        </table>
          
    </div>
</div>
</div>