@model ZavrsniRadWebShop.Models.Product

<div class="container mt-5">
    <a href="@Url.Action("Index", "Private")" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Back</a>
    <h1 class="mb-4 mt-2">Edit Product</h1>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mt-2">
            <label for="productName">Product Name:</label>
            <input type="text" class="form-control" asp-for="Name" required>
        </div>
        <div class="form-group mt-2">
            <label for="productDescription">Product Description:</label>
            <textarea class="form-control" asp-for="Description" required></textarea>
        </div>
        <div class="form-group mt-2">
            <label for="CategoryId">Category:</label>
            <select class="form-control" id="CategoryId" name="CategoryId">
             @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group mt-2">
            <label for="productPrice">Product Price:</label>
            <input type="number" class="form-control" asp-for="Price" step="0.01" min="0" required>
        </div>
        <div class="form-group mt-2">
            <label for="productQuantity">Quantity In Stock:</label>
            <input type="number" class="form-control" asp-for="QuantityInStock" min="0" required>
        </div>
        <div class="form-group mt-2">
            <label for="imageFile">Product Image:</label>
            <input type="file" class="form-control-file" name="imageFile">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    </form>
</div>
