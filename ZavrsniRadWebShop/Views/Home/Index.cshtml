@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" id="first-box">
    <div class="container-fluid lemon-regular" id="first-box-text">
        <h2>Car Detailing</h2>
        <p>
            Welcome to the car detailing website.<br /> We offer a large number of services and products
        </p>
        <a class="btn btn-primary" href="">Shop</a>
    </div>
</div>
<div class="container-fluid" id="second-box">
    <h2 class="text-center lemon-regular mt-3">Information</h2>
    <div class="row lemon-regular" style="height:300px;">
        <div class="item-front col-sm text-center">
            <i class="bi bi-people-fill box-icon"></i>
            <h3>Clients</h3>
            <h1>30</h1>
        </div>
        <div class="item-front col-sm text-center">
            <i class="bi bi-car-front box-icon"></i>
            <h3>Arranged Cars</h3>
            <h1>100</h1>
        </div>
        <div class="item-front col-sm text-center">
            <i class="bi bi-bag box-icon"></i>
            <h3>Products</h3>
            <h1>20</h1>
        </div>
    </div>
</div>
<div class="container-fluid" id="third-box">
    <h2 class="text-center lemon-regular mt-3" style="color:#fff;padding-top:5px;">Contact Us</h2>
    <div class="row justify-content-center p-5">
         <div class="col-6 mt-2" style="border-radius: 5px;background:#fff;height:350px;">
            <form class="justify-content-center" style="margin-top:50px;">
                <div class="form-group mt-2">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group mt-2">
                    <label for="exampleFormControlTextarea1">Message</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group mt-2">
                <button style="width:100%;" type="submit" class="btn btn-primary">Sand</button>
                </div>
             </form>
         </div>
    </div>
</div>

